<!DOCTYPE html>
<html ng-app="randomize">
	<head>
		<title><%= title %></title>
		<!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
		<link rel="stylesheet" type="text/css" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
		<script type="text/javascript" src="/bower_components/jquery/dist/jquery.min.js"></script>
		<script type="text/javascript" src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
		<script type="text/javascript" src="/bower_components/angular/angular.min.js"></script>
		<script type="text/javascript" src="/bower_components/angular-file-upload/dist/angular-file-upload.min.js"></script>
		<script type="text/javascript" src="/javascripts/angular/HomeController.js"></script>
	</head>
	<body>
		<div class="container" ng-controller="FoodController as Food">
			<h2>Randomize</h2>
			<div class="row">
				<div ng-repeat="food in Food.list" class="col-lg-3 col-md-4 col-sm-6 item">
					{{food.name}}
				</div>
			</div>
			<div class="col-lg-6 col-md-6 col-sm-12">
				<form ng-submit="Food.addFood()" class="form-horizontal">
					<fieldset>
						<legend>Add some food</legend>
						<div class="form-group">
							<label for="name" class="col-lg-3 control-label">Name</label>
							<div class="col-lg-9">
								<input ng-model="Food.input.name" type="text" class="form-control" id="name" placeholder="" tabindex="0">
							</div>
						</div>
						<div class="form-group">
							<label for="location" class="col-lg-3 control-label">Location</label>
							<div class="col-lg-9">
								<input ng-model="Food.input.location.name" type="text" class="form-control" id="location" placeholder="" tabindex="1">
							</div>
						</div>
						<div class="form-group">
							<label for="image" class="col-lg-3 control-label">Image</label>
							<div class="col-lg-9">
								<input ng-model="Food.input.image" type="file" class="form-control file" id="image">
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-9 col-lg-offset-3">
								<button type="reset" class="btn btn-default">Cancel</button>
								<button type="submit" class="btn btn-primary">Add</button>
							</div>
						</div>
					</fieldset>
				</form>
			</div>
		</div>
	</body>
</html>